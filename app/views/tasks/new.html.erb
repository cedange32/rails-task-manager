
<div class="container">
  <div class="row">
    <div class="col-md-6-col-md-offset-3">
      <h1>Create a Task</h1>
      <%= form_for(@task) do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :details %>
          <%= f.text_field :details, class: 'form-control' %>
        </div>


        <%= f.submit class: 'btn btn-primary' %>
      <% end %>

    </div>
  </div>
</div>
